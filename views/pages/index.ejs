<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Star Wars Quote App</title>
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <h1 data-position="header">TP Cloud: Node+Express+Mongo.</h1>

  <section data-position="add-quote">
    <h2>Add quote</h2>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
  </section>

  <section data-position="quotes">
    <h2>Quotes</h2>

    <ul class="quotes">
      <% for(var i = 0; i < quotes.length; i++) {%>
      <li class="quote">
        <span> <%= quotes[i].name %></span> : "
        <span> <%= quotes[i].quote %></span> " 
        <button class="myButton deletebtn" type="submit" name="<%= quotes[i].name %>">
          delete</button>
      </li>
      <% } %>
    </ul>
  </section>

  <script src="/main.js"></script>
</body>

</html>